{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "allowJs": true,
    "strict": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@finografic/core/src/types",
      "./node_modules/@types"
    ],
    "types": [
      "node"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "paths": {
      "constants/*": [
        "./src/constants/*"
      ],
      "hooks/*": [
        "./src/hooks/*"
      ],
      "lib/*": [
        "./src/lib/*"
      ],
      "types": [
        "./src/types"
      ],
      "types/*": [
        "./src/types/*"
      ],
      "utils/*": [
        "./src/utils/*"
      ]
    }
  }
}

{
  "name": "@finografic/project-scripts",
  "type": "module",
  "version": "8.4.0",
  "exports": {
    "./clean-docs": {
      "types": "./dist/clean-docs/index.d.ts",
      "import": "./dist/clean-docs/index.js",
      "require": "./dist/clean-docs/index.cjs"
    },
    "./db-setup": {
      "types": "./dist/db-setup/index.d.ts",
      "import": "./dist/db-setup/index.js",
      "require": "./dist/db-setup/index.cjs"
    },
    "./purge-builds": {
      "types": "./dist/purge-builds/src/purge-builds/index.d.ts",
      "import": "./dist/purge-builds/src/purge-builds/index.js",
      "require": "./dist/purge-builds/src/purge-builds/index.cjs"
    },
    "./sqlite-rebuild": {
      "types": "./dist/sqlite-rebuild/index.d.ts",
      "import": "./dist/sqlite-rebuild/index.js",
      "require": "./dist/sqlite-rebuild/index.cjs"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js",
      "require": "./dist/utils/index.cjs"
    },
    "./build-deployment": {
      "types": "./dist/build-deployment/index.d.ts",
      "import": "./dist/build-deployment/index.js",
      "require": "./dist/build-deployment/index.cjs"
    }
  },
  "bin": {
    "clean-docs": "bin/clean-docs.js",
    "db-setup": "bin/db-setup.js",
    "purge-builds": "bin/purge-builds.js",
    "sqlite-rebuild": "bin/sqlite-rebuild.js",
    "build-deployment": "bin/build-deployment.js"
  },
  "packageManager": "pnpm@10.14.0",
  "description": "Fingorafic Project Scripts",
  "author": {
    "name": "Justin",
    "email": "justin.blair.rankin@gmail.com",
    "url": "http://finografic.github.com/cv-justin-rankin"
  },
  "license": "MIT",
  "keywords": [
    "project-scripts",
    "build-tools",
    "deployment",
    "cross-platform",
    "monorepo",
    "clean",
    "purge",
    "database-setup",
    "sqlite",
    "sqlite3",
    "better-sqlite3",
    "typescript",
    "cli"
  ],
  "files": [
    "bin",
    "dist",
    "src/build-deployment/templates"
  ],
  "scripts": {
    "========== DEV": "=======================================================",
    "dev": "npx @eslint/config-inspector --config eslint.config.ts",
    "watch": "tsup --format esm,cjs --watch",
    "·········· BUILD": "·····················································",
    "build": "tsup",
    "build.V2": "tsc && tsx ./scripts/build-bin.ts",
    "build.v1": "tsup --format esm,cjs --clean --dts",
    "·········· BUILD:V2": "·····················································",
    "build.v2": "tsup src/index.ts",
    "build.v2.production": "cross-env NODE_ENV=production tsup src/index.ts",
    "build.v2.development": "cross-env NODE_ENV=development tsup src/index.ts",
    "·········· PUBLISH.GITHUB": "············································",
    "prepublish.github": "pnpm build && git add dist/** && git commit -m \"chore: update generated files\" || true",
    "publish.github.patch": "pnpm prepublish.github && dotenvx run -- pnpm version patch && pnpm publish --registry https://npm.pkg.github.com",
    "publish.github.minor": "pnpm prepublish.github && dotenvx run -- pnpm version minor && pnpm publish --registry https://npm.pkg.github.com",
    "publish.github.major": "pnpm prepublish.github && dotenvx run -- pnpm version major && pnpm publish --registry https://npm.pkg.github.com",
    "·········· REGISTRIES": "··············································",
    "view.registry.gitub": "dotenvx run -- pnpm view @finografic/project-scripts --registry=https://npm.pkg.github.com",
    "·········· PACKAGES": "···················································",
    "eslint-config": "dotenvx run -- pnpm update @finografic/eslint-config --latest",
    "upgrade.deps.all": "pnpm update --latest",
    "·········· LINTING": "···················································",
    "lint": "eslint .",
    "lint.dry": "eslint . --fix-dry-run",
    "lint.fix": "eslint . --fix",
    "lint.prod": "cross-env NODE_ENV=production eslint .",
    "lint.dry.prod": "cross-env NODE_ENV=production eslint . --fix-dry-run",
    "lint.fix.prod": "cross-env NODE_ENV=production eslint . --fix",
    "lint.strict": "cross-env STRICT_LINT=true eslint .",
    "inspect.eslint-config": "eslint-config-inspector",
    "·········· UTILS": "·····················································",
    "tsc.debug": "pnpm exec tsc --pretty --project tsconfig.json",
    "typecheck": "pnpm exec tsc --project tsconfig.json --noEmit",
    "upgrade.all.deps": "pnpm update --latest",
    "·········· HOOKS": "·····················································",
    "prepack": "pnpm build",
    "BAK:prepare": "simple-git-hooks"
  },
  "peerDependencies": {
    "jsonc-eslint-parser": "^2.4.0"
  },
  "dependencies": {
    "@inquirer/confirm": "5.1.18",
    "@inquirer/core": "10.2.2",
    "@inquirer/input": "4.2.4",
    "@inquirer/prompts": "7.8.6",
    "chalk": "5.6.2",
    "del": "8.0.1",
    "ora": "9.0.0",
    "parse-gitignore": "^2.0.0",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "1.51.0",
    "@eslint/js": "9.36.0",
    "@finografic/eslint-config": "9.18.4",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "24.5.2",
    "@types/prompts": "^2.4.9",
    "@types/yargs": "^17.0.33",
    "dotenv": "^17.2.2",
    "env-cmd": "^11.0.0",
    "eslint": "^9.36.0",
    "eslint-plugin-jsonc": "^2.20.1",
    "eslint-plugin-node": "^11.1.0",
    "globals": "^16.4.0",
    "lint-staged": "^16.2.3",
    "simple-git-hooks": "^2.13.1",
    "tsup": "8.5.0",
    "tsx": "^4.20.6",
    "typescript": "5.9.2"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "simple-git-hooks",
      "unrs-resolver"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "eslint --fix"
    ]
  }
}

{
  "name": "@finografic/project-scripts",
  "type": "module",
  "version": "8.13.0",
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": ">=22.17.1"
  },
  "description": "Fingorafic Project Scripts",
  "homepage": "https://github.com/finografic/project-scripts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/finografic/project-scripts.git"
  },
  "bugs": {
    "url": "https://github.com/finografic/project-scripts/issues"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "author": {
    "name": "Justin",
    "email": "justin.blair.rankin@gmail.com",
    "url": "http://finografic.github.com/cv-justin-rankin"
  },
  "license": "MIT",
  "keywords": [
    "project-scripts",
    "build-tools",
    "deployment",
    "cross-platform",
    "monorepo",
    "clean",
    "purge",
    "database-setup",
    "sqlite",
    "sqlite3",
    "better-sqlite3",
    "typescript",
    "cli",
    "finografic"
  ],
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "module": "./dist/index.mjs",
  "files": [
    "bin",
    "dist",
    "src/build-deployment/templates"
  ],
  "exports": {
    "./clean-docs": {
      "types": "./dist/clean-docs/index.d.ts",
      "import": "./dist/clean-docs/index.js",
      "require": "./dist/clean-docs/index.cjs"
    },
    "./db-setup": {
      "types": "./dist/db-setup/index.d.ts",
      "import": "./dist/db-setup/index.js",
      "require": "./dist/db-setup/index.cjs"
    },
    "./purge-builds": {
      "types": "./dist/purge-builds/src/purge-builds/index.d.ts",
      "import": "./dist/purge-builds/src/purge-builds/index.js",
      "require": "./dist/purge-builds/src/purge-builds/index.cjs"
    },
    "./sqlite-rebuild": {
      "types": "./dist/sqlite-rebuild/index.d.ts",
      "import": "./dist/sqlite-rebuild/index.js",
      "require": "./dist/sqlite-rebuild/index.cjs"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js",
      "require": "./dist/utils/index.cjs"
    },
    "./build-deployment": {
      "types": "./dist/build-deployment/index.d.ts",
      "import": "./dist/build-deployment/index.js",
      "require": "./dist/build-deployment/index.cjs"
    }
  },
  "scripts": {
    "========== DEV": "=======================================================",
    "dev": "npx @eslint/config-inspector --config eslint.config.ts",
    "·········· BUILD": "·····················································",
    "build": "tsup",
    "watch": "tsup --format esm,cjs --watch",
    "build.V2": "tsc && tsx ./scripts/build-bin.ts",
    "build.v1": "tsup --format esm,cjs --clean --dts",
    "·········· TESTING": "···················································",
    "test": "vitest",
    "test.run": "vitest run",
    "test.coverage": "vitest run --coverage",
    "·········· LINTING": "···················································",
    "lint": "eslint .",
    "lint.fix": "eslint . --fix",
    "lint.prod": "cross-env NODE_ENV=production eslint .",
    "lint.dry.prod": "cross-env NODE_ENV=production eslint . --fix-dry-run",
    "lint.fix.prod": "cross-env NODE_ENV=production eslint . --fix",
    "lint.strict": "cross-env STRICT_LINT=true eslint .",
    "inspect.eslint-config": "eslint-config-inspector",
    "·········· FORMATTING": "················································",
    "format": "dprint fmt --diff",
    "format.check": "dprint check",
    "·········· PUBLISH.GITHUB": "············································",
    "release.github.patch": "pnpm run release.check && pnpm version patch && git push --follow-tags",
    "release.github.minor": "pnpm run release.check && pnpm version minor && git push --follow-tags",
    "release.github.major": "pnpm run release.check && pnpm version major && git push --follow-tags",
    "release.check": "pnpm lint.fix && pnpm typecheck && pnpm test.run",
    "release.publish": "pnpm publish --registry https://npm.pkg.github.com",
    "·········· REGISTRIES": "··············································",
    "view.registry.github": "pnpm view @finografic/project-scripts --registry=https://npm.pkg.github.com",
    "·········· PACKAGES": "···················································",
    "update.project-scripts": "pnpm update @finografic/core --latest",
    "upgrade.deps.all": "pnpm update --latest",
    "·········· UTILS": "·····················································",
    "tsc.debug": "tsc --pretty --project tsconfig.json",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "·········· HOOKS": "·····················································",
    "prepack": "pnpm build",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@inquirer/confirm": "5.1.18",
    "@inquirer/core": "10.2.2",
    "@inquirer/input": "4.2.4",
    "@inquirer/prompts": "7.8.6",
    "chalk": "5.6.2",
    "del": "8.0.1",
    "execa": "9.6.1",
    "ora": "9.0.0",
    "parse-gitignore": "^2.0.0",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "1.51.0",
    "@eslint/js": "^9.39.2",
    "@finografic/dprint-config": "0.9.1",
    "@finografic/eslint-config": "9.18.4",
    "@stylistic/eslint-plugin": "^5.6.1",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.0.0",
    "@types/prompts": "^2.4.9",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "dotenv": "^17.2.2",
    "env-cmd": "^11.0.0",
    "eslint": "^9.39.2",
    "eslint-plugin-jsonc": "^2.20.1",
    "eslint-plugin-markdownlint": "^0.9.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.4.0",
    "lint-staged": "^16.2.7",
    "simple-git-hooks": "^2.13.1",
    "tsdown": "^0.18.3",
    "tsup": "8.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.51.0",
    "vitest": "^4.0.16"
  },
  "bin": {
    "clean-docs": "bin/clean-docs.js",
    "db-setup": "bin/db-setup.js",
    "purge-builds": "bin/purge-builds.js",
    "sqlite-rebuild": "bin/sqlite-rebuild.js",
    "build-deployment": "bin/build-deployment.js"
  },
  "peerDependencies": {
    "jsonc-eslint-parser": "^2.4.0",
    "tsx": "^4.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "simple-git-hooks",
      "unrs-resolver"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,mjs,cjs}": [
      "eslint --fix",
      "dprint fmt"
    ],
    "*.{json,jsonc,md,yml,yaml,toml}": [
      "dprint fmt"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
